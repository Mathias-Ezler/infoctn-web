---
import Layout from "../layouts/Layout.astro";
import { SignIn, SignOut } from "auth-astro/components";
---

<Layout title="Login">
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 space-y-8">
      <!-- Logo o Imagen de la empresa (reemplazar src con tu logo) -->
      <div class="text-center">
        <img 
          src="/logo.jpg" 
          alt="Logo" 
          class="h-16 w-auto mx-auto mb-2"
        />
        <h1 class="text-3xl font-bold text-white tracking-tight">
          Bienvenido
        </h1>
        <p class="mt-2 text-gray-400">
          Inicia sesión para continuar
        </p>
      </div>

      <!-- Contenedor de botones -->
      <div class="space-y-4">
        <SignIn 
          provider="google" 
          class="group w-full px-6 py-3 bg-white hover:bg-gray-50 text-gray-900 rounded-xl shadow-lg transition-all duration-300 flex items-center justify-center space-x-3 hover:scale-[1.02] active:scale-[0.98] cursor-pointer"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <span class="text-sm font-medium">Continuar con Google</span>
        </SignIn>

        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-600"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-transparent text-gray-400">o</span>
          </div>
        </div>

        <SignOut 
          class="w-full px-6 py-3 bg-gradient-to-r from-red-600 to-red-500 hover:from-red-500 hover:to-red-400 text-white rounded-xl shadow-lg transition-all duration-300 flex items-center justify-center space-x-2 hover:scale-[1.02] active:scale-[0.98] cursor-pointer"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          <span class="text-sm font-medium">Cerrar sesión</span>
        </SignOut>
      </div>

      <!-- Footer con links adicionales -->
      <div class="text-center text-sm text-gray-400">
        <a href="#" class="hover:text-white transition-colors duration-200 cursor-pointer">
          Términos y condiciones
        </a>
        <span class="mx-2">•</span>
        <a href="#" class="hover:text-white transition-colors duration-200 cursor-pointer">
          Política de privacidad
        </a>
      </div>
    </div>
  </div>
</Layout>
